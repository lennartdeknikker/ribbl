<form action="/join" method="GET" id="form-join-game" <% if (rooms.length < 1) { %> class="hidden" <% } %>>
  <fieldset>
    <legend>Join an existing game</legend>
    <div class="form-item">
      <input type="text" id="user-name" placeholder="your name" name="user" />
    </div>
    <div class="settings">
      <div class="form-item-settings">
        <select name="room" id="select-room">
          <% rooms.forEach(room => { %>
          <option value="<%= room.roomName %>"><%= room.roomName %> (<%= room.userTotal %> player)</option>
          <% }) %>
        </select>
      </div>
    </div>
    <input type="submit" value="let's go!" />
  </fieldset>
</form>